#!/usr/bin/env bash

# Launch JetBrains Toolbox in the background
/opt/jetbrains-toolbox/jetbrains-toolbox &

PID=$(pidof jetbrains-toolbox)

# Wait for the process to finish
#shellcheck disable=SC2086
wait $PID

# Remove the desktop file created by the application in $HOME/.local/share/applications
if [ -f "$HOME/.local/share/applications/jetbrains-toolbox.desktop" ]; then
  rm "$HOME/.local/share/applications/jetbrains-toolbox.desktop"
fi
