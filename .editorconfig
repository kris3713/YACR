# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2
charset = utf-8
indent_style = space
max_line_length = 90
trim_trailing_whitespace = true

[ruff.toml]
indent_size = 4
